<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.campus.mapper.ProductMapper">

    <resultMap id="ProductMap" type="com.campus.model.Product">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="categoryId" column="category_id"/>
        <result property="sellerId" column="seller_id"/>
        <result property="price" column="price"/>
        <result property="description" column="description"/>
        <result property="imageUrl" column="image_url"/>
        <result property="status" column="status"/>
        <result property="publishTime" column="publish_time"/>
    </resultMap>

    <select id="selectAllAvailableProducts" resultMap="ProductMap">
        SELECT
        <include refid="Base_Column_List" />  FROM
        t_product  WHERE
        status = 1
        <if test="keyword != null and keyword != ''">
            AND (name LIKE CONCAT('%', #{keyword}, '%')
            OR description LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        ORDER BY
        publish_time DESC
    </select>


    <sql id="Base_Column_List">
        id, name, category_id, seller_id, price, description, image_url, status, publish_time
    </sql>


<select id="selectById" parameterType="java.lang.Integer" resultType="com.campus.model.Product">
SELECT
<include refid="Base_Column_List" />
FROM t_product
WHERE id = #{id}
</select>

    <update id="updateProduct" parameterType="com.campus.model.Product">
        UPDATE t_product
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="imageUrl != null and imageUrl != ''">
                image_url = #{imageUrl},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        WHERE id = #{id} AND seller_id = #{sellerId}
    </update>

    <update id="deleteProduct">
        UPDATE t_product
        SET status = 0
        WHERE id = #{id} AND seller_id = #{sellerId}
    </update>

    <select id="selectProductsBySellerId" resultMap="ProductMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM
        t_product
        WHERE
        seller_id = #{sellerId}
        <if test="keyword != null and keyword != ''">
            AND (name LIKE CONCAT('%', #{keyword}, '%')
            OR description LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        ORDER BY
        publish_time DESC
    </select>

    <insert id="insert" parameterType="com.campus.model.Product" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_product (
            name,
            category_id,
            seller_id,
            price,
            description,
            image_url,
            status,
            publish_time
        ) VALUES (
                     #{name},
                     #{categoryId},
                     #{sellerId},
                     #{price},
                     #{description},
                     #{imageUrl},
                     #{status},
                     #{publishTime}
                 )
    </insert>

</mapper>
